{% extends "templates/trame.html.twig" %}

{% block contenu %}
<div class="row justify-content-md-center">
    <div id="loginbox" class="col-md-5">                    
        <div class="card mb-5 mt-3">
            <div class="card-header text-white bg_ffck_primary">
                <h4>{{ lang('change_password_heading') }}</h4>
            </div>     

            <div class="card-body">

                <div id="infoMessage">{{ message |raw }}</div>
                    
                {{ form_open("auth/change_password", 'role="form" class="form-horizontal row"') }}

                    <div class="col-12">

                        <div class="form-group row">
                            {{ form_label(lang('kpi_login_OldPassword'), '', 'class="col-sm-5 col-form-label"') }}
                            <div class="col-sm-7">
                                {{ form_input(old_password) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(lang('kpi_login_NewPassword'), '', 'class="col-sm-5 col-form-label"') }}
                            <div class="col-sm-7">
                                {{ form_input(new_password) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(lang('kpi_login_NewPasswordConfirm'), '', 'class="col-sm-5 col-form-label"') }}
                            <div class="col-sm-7">
                                {{ form_input(new_password_confirm) }}
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="row justify-content-between mt-3">
                                <!-- Button -->
                                <div class="col-12 text-right">
                                    {{ form_submit('submit', lang('change_password_submit_btn'), 'class="btn btn-primary"') }}
                                </div>
                            </div>
                        </div>

                    </div>

                        {{ form_input(user_id) }}
                        {{ form_hidden(csrf) }}

                {{ form_close() }}     

            </div>                     
        </div>  
    </div>  
</div>
<br>
<br>
<br>
{% endblock %}
